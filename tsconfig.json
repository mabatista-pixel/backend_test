{
  "compilerOptions": {
    "target": "ES2020",                                // Specify ECMAScript target version.
    "module": "commonjs",                              // Specify module code generation.
    "strict": true,                                    // Enable all strict type-checking options.
    "esModuleInterop": true,                           // Enables emit interoperability between CommonJS and ES Modules.
    "experimentalDecorators": true,                    // Enables experimental support for decorators.
    "emitDecoratorMetadata": true,                     // Emit design-type metadata for decorators.
    "skipLibCheck": true,                              // Skip type checking of declaration files.
    "forceConsistentCasingInFileNames": true, 
    "strictPropertyInitialization": false,         // Disallow inconsistently-cased references to the same file.
    "moduleResolution": "node",                        // Type of module resolution to use.
    "outDir": "./dist",                                // Redirect output structure to the `dist` directory.
    "rootDir": "./src",                                // Specify the root directory of input files.
    "baseUrl": "./",                                   // Base directory to resolve non-relative module names.
    "paths": {
      "@entities/*": ["src/entities/*"],               // Aliases for paths used in the project.
      "@migrations/*": ["src/migrations/*"],
      "@repositories/*": ["src/repositories/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": ["src/**/*"],                             // Include all .ts files in the src directory.
  "exclude": ["node_modules", "dist"]                  // Exclude node_modules and dist directories.
}
